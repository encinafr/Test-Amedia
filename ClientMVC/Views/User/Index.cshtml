@using ClientMVC.Common.Enums
@model IEnumerable<ClientMVC.Models.UserModel>

<h1>Usuarios</h1>

<p style="text-align:right;margin-right:20px;">
    <a class="btn btn-outline-primary" asp-action="AddOrEdit">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                   Cod
                </th>
                <th>
                   Nombre
                </th>
                <th>
                   Apellido
                </th>
                <th>
                    Nro de Documento
                </th>
                <th>
                    Rol
                </th>
                <th></th>
                <th>Edit Action</th>
                <th>Details Action</th>
                <th>Delete Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_usuario))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Txt_nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Txt_apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nro_doc)
                </td>
                <td>
                     @((RolEnum)item.Cod_rol)
                </td>
                <td>
                <td class="text-center">
                    <a asp-action="AddOrEdit" class="btn btn-outline-primary"  asp-route-userId ="@item.Cod_usuario">Edit</a>
                </td>
                <td class="text-center">
                    <a asp-action="Details" class="btn btn-outline-info"  asp-route-userId="@item.Cod_usuario">Details</a>
                </td>
                <td class="text-center">
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-userId ="@item.Cod_usuario">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    </div>